create table user
( id bigint primary key ,
  name text null,
  password text not null,
  achivement text not null 
  );
insert into user values (1, '@liric','ssgs3257gd', );
insert into user values (2, 'Corlg','437fdh145',);
insert into user values (3, 'Anna', '16fafaf', );

create table characters
(id bigint primary key ,
 name text not null ,
 lv int not null default 0
);
insert into user values (1, 'kevin', 1);
insert into user values (2, 'kiana', 10);

create table location
(id bigint primary key ,
 tile text not null ,
 file_setings text not null 
 );
insert into user values (1, 'lake',);

create table achivement
(id bigint primary key ,
 name text not null ,
 status bool not null 
);
 
create table achivement_user_list
( id bigint primary key ,
  user_id  int not null ,
  achivement_id int not null ,
  data_of_receving date not null
  constraint fk_user_id_user foreign key (user_id) references user(id));
  constraint fk_achivement_id_achivement foreign key (id) references user(id));
);

create table location_user_list
(id bigint primary key ,
  user_id  int not null ,
  location_id int not null 
  constraint fk_user_id_user foreign key (user_id) references user(id));
  constraint fk_location_id_location foreign key (location_id) references user(id));
);

create table user_characters
(id bigint primary key ,
  user_id  int not null ,
  character_id int not null ,
  constraint fk_user_id_user foreign key (user_id) references user(id));
  constraint fk_character_id_character foreign key (character_id) references user(id));
);

create table characters_skills
(id bigint primary key ,
  user_id  int not null ,
  character_id int not null ,
  powers float not null,
  class text not null,
  constraint fk_user_id_user foreign key (user_id) references user(id));
  constraint fk_character_id_character foreign key (character_id) references user(id));
);
